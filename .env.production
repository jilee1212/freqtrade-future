# Freqtrade Futures Bot - Production Environment
# Phase 8: Cloud Deployment Configuration

# Environment
ENVIRONMENT=production
DEBUG=false
FLASK_ENV=production

# Database Configuration
DATABASE_URL=sqlite:///user_data/tradesv3.sqlite

# Freqtrade API Configuration
FREQTRADE_API_SERVER=true
FREQTRADE_API_LISTEN_IP_ADDRESS=0.0.0.0
FREQTRADE_API_SERVER_PORT=8080
FREQTRADE_API_USERNAME=freqtrade
FREQTRADE_API_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Web Dashboard Configuration
FLASK_SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
WEB_DASHBOARD_PORT=5000
WEB_DASHBOARD_HOST=0.0.0.0

# Security Configuration
CORS_ORIGINS=["https://yourdomain.com"]
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT=3600

# Telegram Configuration
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# Exchange Configuration (Production)
BINANCE_API_KEY=YOUR_PRODUCTION_API_KEY
BINANCE_SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY
BINANCE_SANDBOX=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/freqtrade/freqtrade.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=freqtrade-futures-backups

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30